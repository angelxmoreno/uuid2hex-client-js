{
    "exclude": ["./tests/", "./node_modules/", "./dist/"],
    "include": ["./src/"],
    "compilerOptions": {
        "declaration": true,
        "moduleResolution": "node",
        "target": "es5",
        "module": "commonjs",
        "lib": ["es6"],
        "allowJs": false,
        "outDir": "dist",
        "rootDir": "src",
        "strict": true,
        "noImplicitAny": false,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    }
}
